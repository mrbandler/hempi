{
    "name": "hempi",
    "version": "1.3.0",
    "description": "Hempi - Highly Elaborate Multi-Package Installer",
    "repository": "git@github.com:mrbandler/hempi.git",
    "author": "mrbandler <mrbandler@fivefingergames.com>",
    "license": "MIT",
    "private": false,
    "readme": "README.md",
    "bugs": {
        "url": "https://github.com/mrbandler/hempi/issues"
    },
    "os": [
        "win32"
    ],
    "cpu": [
        "x64",
        "x32"
    ],
    "bin": {
        "hempi": "./bin/hempi.js"
    },
    "files": [
        "bin"
    ],
    "scripts": {
        "build": "rimraf ./bin && tsc --build src",
        "build:start": "yarn build && yarn start",
        "build:link": "yarn build && npm link"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "commander": "^5.1.0",
        "download": "^8.0.0",
        "fs-extra": "^9.0.1",
        "listr": "^0.14.3",
        "lodash": "^4.17.15",
        "pkg": "^4.4.8",
        "progress-stream": "^2.0.0",
        "progress-string": "^1.2.2",
        "reflect-metadata": "^0.1.13",
        "typedi": "^0.8.0",
        "yaml": "^1.10.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/chalk": "^2.2.0",
        "@types/commander": "^2.12.2",
        "@types/download": "^6.2.4",
        "@types/es6-promise": "^3.3.0",
        "@types/fs-extra": "^9.0.1",
        "@types/listr": "^0.14.2",
        "@types/lodash": "^4.14.155",
        "@types/node": "^14.0.13",
        "@types/progress-stream": "^2.0.0",
        "@types/yaml": "^1.9.7",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "hooks": {
        "pre-commit": "lint-staged",
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    },
    "lint-staged": {
        "*.{js,ts,css,json,md,yml}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    }
}
