{
    "name": "hepi",
    "version": "0.1.0",
    "description": "Hepi - Highly Efficient Package Installer",
    "main": "index.js",
    "repository": "git@github.com:mrbandler/hepi.git",
    "author": "mrbandler <mrbandler@fivefingergames.com>",
    "license": "MIT",
    "private": false,
    "readme": "README.md",
    "bugs": {
        "url": "https://github.com/mrbandler/hepi/issues"
    },
    "bin": {
        "hepi": "./bin/index.js"
    },
    "files": [
        "bin"
    ],
    "scripts": {
        "start": "node",
        "build": "tsc",
        "build:start": "yarn build && yarn start",
        "build:link": "yarn build && npm link"
    },
    "dependencies": {
        "lodash": "^4.17.15",
        "pkg": "^4.4.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "@types/es6-promise": "^3.3.0",
        "@types/lodash": "^4.14.155",
        "@types/node": "^14.0.13",
        "@typescript-eslint/eslint-plugin": "^3.3.0",
        "@typescript-eslint/parser": "^3.3.0",
        "eslint": "^7.3.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,ts,css,json,md,yml}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    }
}
